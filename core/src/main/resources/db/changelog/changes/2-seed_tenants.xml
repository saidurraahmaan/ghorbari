<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet author="saidur" id="seed-tenants-1">
        <comment>Seed demo tenants for development and testing</comment>

        <!-- Tenant 1: Sunrise Towers -->
        <insert tableName="tenants">
            <column name="tenant_key" value="sunrise"/>
            <column name="name" value="Sunrise Towers Management"/>
            <column name="description" value="Premier residential complex with 12 buildings and 240 units in downtown area. Offers luxury amenities including swimming pool, gym, and 24/7 security."/>
            <column name="active" valueBoolean="true"/>
            <column name="created_at" valueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" valueComputed="CURRENT_TIMESTAMP"/>
        </insert>

        <!-- Tenant 2: Green Valley Apartments -->
        <insert tableName="tenants">
            <column name="tenant_key" value="greenvalley"/>
            <column name="name" value="Green Valley Apartments"/>
            <column name="description" value="Family-friendly apartment community with 8 buildings and 160 units. Features playground, community center, and eco-friendly initiatives."/>
            <column name="active" valueBoolean="true"/>
            <column name="created_at" valueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" valueComputed="CURRENT_TIMESTAMP"/>
        </insert>

        <rollback>
            <delete tableName="tenants">
                <where>tenant_key IN ('sunrise', 'greenvalley')</where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>

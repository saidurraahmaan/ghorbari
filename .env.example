# Environment Variables Template
# Copy this file to .env and fill in your actual values
# .env file is gitignored and will not be committed

# REQUIRED: Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/ghorbari_prod
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_database_password_here

# REQUIRED: JWT Configuration
JWT_SECRET=your_jwt_secret_key_at_least_256_bits_long_here
JWT_EXPIRATION=86400000

# REQUIRED: Swagger Configuration
SWAGGER_SERVER_URL=https://api.ghorbari.com
SWAGGER_SERVER_DESCRIPTION=Production Server

# OPTIONAL: Server Configuration
SERVER_PORT=8081
HIBERNATE_DDL_AUTO=validate
SHOW_SQL=false
FORMAT_SQL=false

# REQUIRED: Spring Profile
SPRING_PROFILES_ACTIVE=prod
